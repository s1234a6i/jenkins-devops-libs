  <script>
    // Simulated status (replace with dynamic value from your system or API)
    const buildStatus = "unknown"; // Possible values: "success", "unstable", "failure", "unknown"

    // Dynamically update the border color based on build status
    const summarySection = document.getElementById('summary-section');

    if (buildStatus === 'success') {
      summarySection.classList.add('success');
    } else if (buildStatus === 'unstable') {
      summarySection.classList.add('unstable');
    } else if (buildStatus === 'failure') {
      summarySection.classList.add('failure');
    } else {
      summarySection.classList.add('unknown'); // Default to grey for unknown or other statuses
    }
  </script>
