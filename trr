/* Keyframes for a single bounce */
@keyframes singleBounce {
  0% {
    transform: translateY(0); /* Resting position */
  }
  10% {
    transform: translateY(-20px); /* Bounce up */
  }
  20% {
    transform: translateY(0); /* Bounce down */
  }
  100% {
    transform: translateY(0); /* Remain at rest for the rest of the cycle */
  }
}

/* Apply the animation */
.bouncing {
  animation: singleBounce 30s linear infinite; /* 30-second cycle, repeats infinitely */
}